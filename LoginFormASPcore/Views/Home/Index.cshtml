                function animateCounter(element, duration = 4069) {
            const target = parseInt(element.dataset.target);
            let start = 0;
            const increment = target / (duration / 17); // Roughly 70fps

            function updateCounter() {
                start += increment;
                element.innerText = Math.floor(start);
                if (start < target) {
                    requestAnimationFrame(updateCounter);
                } else {
                    element.innerText = target + (element.innerText.includes('%') ? '%' : '+'); // Ensure final value is exact
                }
            }

            updateCounter();
        }

        const counterNumbers = document.querySelectorAll('.counter-number');

        function handleIntersection(entries, observer) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    animateCounter(entry.target);
                    observer.unobserve(entry.target); // Only animate once
                }
            });
        }

        const observer = new IntersectionObserver(handleIntersection, {
            threshold: 0.4 // Adjust as needed: how much of the element needs to be visible to trigger
        });

        counterNumbers.forEach(number => {
            observer.observe(number);
        });


